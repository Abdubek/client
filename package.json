{
  "name": "logux-client",
  "version": "0.2.10",
  "description": "Low-level Logux client for web browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-client",
  "dependencies": {
    "browser-supports-log-styles": "^1.1.7",
    "logux-core": "logux/logux-core",
    "nanoevents": "^1.0.7",
    "nanoid": "^1.3.1"
  },
  "devDependencies": {
    "clean-publish": "^1.0.10",
    "eslint": "^5.7.0",
    "eslint-config-logux": "^26.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "fake-indexeddb": "^2.0.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.3.0",
    "nanodelay": "^0.1.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "size-limit": "^0.20.1",
    "svgo": "^1.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc -d docs/ *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck && yarn build",
    "build": "NODE_ENV=production webpack --config test/demo/webpack.config",
    "start": "webpack-dev-server --config test/demo/webpack.config"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "8.8 KB"
    },
    {
      "path": [
        "attention.js",
        "confirm.js",
        "favicon.js",
        "status.js",
        "badge.js",
        "log.js",
        "badge/en.js",
        "badge/default.js"
      ],
      "limit": "2.8 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/*.js.html"
    ],
    "dictionary": [
      "Logux",
      "docdash",
      "JSDoc",
      "js",
      "JS",
      "SemVer",
      "UUID",
      "subprotocol",
      "ClientNode",
      "Redux",
      "webpack",
      "Browserify",
      "Gon",
      "npm",
      "KB",
      "Versioning",
      "IndexedStore",
      "reconnections",
      "reconnection",
      "ws",
      "UX",
      "nanoevents",
      "tabId",
      "CrossTabClient",
      "nodeId",
      "TestTime",
      "Alexey",
      "Gaziev",
      "Fursov",
      "Hanna",
      "Stoliar",
      "Grigoriy",
      "Beziuk",
      "Dementyev",
      "Konstantin",
      "Mamaev",
      "Evgeny",
      "Rodionov",
      "IndexedDB",
      "logux",
      "GMT",
      "Mon",
      "Tue",
      "Thu",
      "Fri",
      "Oct",
      "favicon",
      "UI",
      "synchronizedAfterWait",
      "protocolError",
      "statusReceiver",
      "syncError"
    ]
  }
}
