{
  "name": "logux-client",
  "version": "0.2.10",
  "description": "Low-level Logux client for web browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-client",
  "dependencies": {
    "logux-core": "logux/logux-core",
    "nanoevents": "^1.0.2",
    "nanoid": "^1.0.2",
    "promise": "^8.0.1"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^4.19.1",
    "eslint-config-logux": "^21.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "fake-indexeddb": "^2.0.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.1.0",
    "logux-store-tests": "^0.1.3",
    "nanodelay": "^0.1.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "size-limit": "^0.17.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck",
    "start": "webpack-dev-server --config test/demo/webpack.config"
  },
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "9.5 KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
