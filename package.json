{
  "name": "logux-client",
  "version": "0.1.0",
  "description": "Low-level Logux client for web browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-client",
  "dependencies": {
    "logux-core": "logux/logux-core",
    "logux-sync": "logux/logux-sync",
    "nanoevents": "^0.3.0",
    "nanoid": "^0.2.0"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^4.6.1",
    "eslint-config-logux": "^16.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-es5": "^1.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "fake-indexeddb": "^2.0.3",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.0.1",
    "jsdoc": "^3.5.4",
    "lint-staged": "^4.1.0",
    "logux-store-tests": "logux/logux-store-tests",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "size-limit": "^0.11.0",
    "webpack-dev-server": "^2.7.1",
    "yaspeller-ci": "^0.6.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck",
    "demo": "webpack-dev-server --config test/demo/webpack.config"
  },
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "9KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
