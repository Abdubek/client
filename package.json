{
  "name": "logux-client",
  "version": "0.2.6",
  "description": "Low-level Logux client for web browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-client",
  "dependencies": {
    "logux-core": "^0.2.1",
    "logux-sync": "^0.2.3",
    "nanoevents": "^1.0.2",
    "nanoid": "^1.0.1",
    "promise": "^8.0.1"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^4.16.0",
    "eslint-config-logux": "^18.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-es5": "^1.2.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "fake-indexeddb": "^2.0.3",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.1.4",
    "jsdoc": "^3.5.5",
    "lint-staged": "^6.1.0",
    "logux-store-tests": "^0.1.3",
    "nanodelay": "^0.1.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "size-limit": "^0.14.0",
    "webpack-dev-server": "^2.11.1",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck",
    "demo": "webpack-dev-server --config test/demo/webpack.config"
  },
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "9.4 KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
