{
  "name": "@logux/client",
  "version": "0.2.10",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "spell": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/ test/demo/build/ test/demo/.cache",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc -d docs/ *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell && yarn build",
    "build": "parcel build --experimental-scope-hoisting -d ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html",
    "start": "parcel serve -d ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/client",
  "dependencies": {
    "@logux/core": "^0.3.0",
    "browser-supports-log-styles": "^1.1.7",
    "nanoevents": "^1.0.8",
    "nanoid": "^2.0.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.0.0",
    "clean-publish": "^1.1.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "fake-indexeddb": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.1.5",
    "nanodelay": "^0.1.4",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^2.6.3",
    "size-limit": "^1.0.1",
    "svgo": "^1.2.1",
    "yaspeller-ci": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser"
  },
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "8 KB"
    },
    {
      "path": [
        "attention.js",
        "confirm.js",
        "favicon.js",
        "status.js",
        "badge.js",
        "log.js",
        "badge/en.js",
        "badge/default.js"
      ],
      "limit": "2.9 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/*.js.html"
    ],
    "dictionary": [
      "Logux",
      "JSDoc",
      "js",
      "JS",
      "SemVer",
      "subprotocol",
      "ClientNode",
      "Versioning",
      "IndexedStore",
      "reconnections",
      "reconnection",
      "ws",
      "UX",
      "nanoevents",
      "tabId",
      "CrossTabClient",
      "nodeId",
      "TestTime",
      "Alexey",
      "Gaziev",
      "Fursov",
      "Hanna",
      "Stoliar",
      "Grigoriy",
      "Beziuk",
      "Dementyev",
      "Konstantin",
      "Mamaev",
      "Evgeny",
      "Rodionov",
      "IndexedDB",
      "logux",
      "GMT",
      "Mon",
      "Tue",
      "Thu",
      "Fri",
      "Oct",
      "favicon",
      "UI",
      "synchronizedAfterWait",
      "protocolError",
      "statusReceiver",
      "syncError",
      "clientId",
      "GraphQL",
      "DevTools"
    ]
  }
}
